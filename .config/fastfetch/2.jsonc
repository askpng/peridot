{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
      "source": "/etc/fastfetch/ascii/bep",
      "color": {
        "1": "yellow"
      },
      "padding": {
        "top": 2,
        "left": 4
      }
    },
    "display": {
      "separator": " ",
      "color": {
        "keys": "green"
      },
      "size": {
        "ndigits": 0,
        "maxPrefix": "MB"
      }
    },
    "modules": [
        "break",
        "break",
      {
        "type": "title",
        "fqdn": true,
        "color": {
          "user": "magenta",
          "at": "blue",
          "host": "blue"
        }
      },
      {
        "type": "colors",
        "symbol": "circle"
      },
      {
        "type": "os",
        "key": "󰻀",
        "format": "{6} {9}"
      },
      {
        "type": "command",
        "key": "",
        "text": "rpm-ostree status | awk '/ostree-image-signed:/ {split($2, image, \"\\://\"); print substr(image[2], 16)}'"
      },
      {
        "type": "command",
        "key": "",
        "text": "ls -l / --time-style=full-iso | grep ostree | awk '{print $6}'",
        "shell": "/bin/bash"
      },
      {
        "type": "packages",
        "key": "",
        "format": "{5} rpms & {34} flatpaks"
      },    
      {
        "type": "shell",
        "key": ""
      },
      {
        "type": "uptime",
        "key": "󰅕"
      },
      {
        "type": "de",
        "key": "󰟀",
        "format": "{2}"
      },
      {
        "type": "wm",
        "key": "",
        "format": "{2}"
      },
      {
        "type": "terminal",
        "key": ""
      },
      {
        "type": "host",
        "key": "󰌢"
      },
      {
        "type": "cpu",
        "key": "",
        "format": "{1}"
      },
      {
        "type": "gpu",
        "key": "󰽉",
        "format": "{2}"
      },
      {
        "type": "memory",
        "key": "󰍛",
        "format": "{1} / {2}"
      }
    ]
  }
  
